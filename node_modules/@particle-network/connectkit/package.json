{
  "name": "@particle-network/connectkit",
  "version": "2.0.15",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "license": "Apache-2.0",
  "homepage": "https://particle.network",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/esm/index.mjs"
    },
    "./evm": {
      "types": "./dist/types/exports/connectors/evm.d.ts",
      "require": "./dist/cjs/exports/connectors/evm.cjs",
      "default": "./dist/esm/exports/connectors/evm.mjs"
    },
    "./solana": {
      "types": "./dist/types/exports/connectors/solana.d.ts",
      "require": "./dist/cjs/exports/connectors/solana.cjs",
      "default": "./dist/esm/exports/connectors/solana.mjs"
    },
    "./auth": {
      "types": "./dist/types/exports/connectors/auth.d.ts",
      "require": "./dist/cjs/exports/connectors/auth.cjs",
      "default": "./dist/esm/exports/connectors/auth.mjs"
    },
    "./aa": {
      "types": "./dist/types/exports/plugins/aa.d.ts",
      "require": "./dist/cjs/exports/plugins/aa.cjs",
      "default": "./dist/esm/exports/plugins/aa.mjs"
    },
    "./wallet": {
      "types": "./dist/types/exports/plugins/wallet.d.ts",
      "require": "./dist/cjs/exports/plugins/wallet.cjs",
      "default": "./dist/esm/exports/plugins/wallet.mjs"
    },
    "./chains": {
      "types": "./dist/types/exports/chains.d.ts",
      "require": "./dist/cjs/exports/chains.cjs",
      "default": "./dist/esm/exports/chains.mjs"
    },
    "./core": {
      "types": "./dist/types/exports/core.d.ts",
      "require": "./dist/cjs/exports/core.cjs",
      "default": "./dist/esm/exports/core.mjs"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "author": "Particle Network",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ethereum",
    "solana",
    "wallet",
    "blockchain",
    "auth",
    "mpc",
    "particle",
    "connectkit"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "mkdir -p dist/cjs && echo '{ \"type\": \"commonjs\" }' > dist/cjs/package.json && node build.js",
    "build:dev": "NODE_ENV=development yarn build",
    "build:watch": "yarn build --watch",
    "clean": "rm -rf dist && rm -rf esm",
    "dev": "yarn clean && NODE_ENV=development yarn build:watch & NODE_ENV=development yarn typegen:watch",
    "prepare": "MINIFY_CSS=true yarn build",
    "prebuild": "yarn typegen",
    "typecheck": "yarn tsc --noEmit",
    "typegen": "tsc --emitDeclarationOnly || true",
    "typegen:watch": "tsc --emitDeclarationOnly --watch",
    "locale:import": "npx vite-node scripts/locales",
    "locale:export": "npx vite-node scripts/locales/export.ts"
  },
  "dependencies": {
    "@particle-network/aa-plugin": "^1.0.3",
    "@particle-network/auth-connectors": "^1.0.10",
    "@particle-network/evm-connectors": "^1.0.8",
    "@particle-network/solana-connectors": "^1.0.1",
    "@particle-network/wallet-plugin": "^1.0.7",
    "buffer": "^6.0.3",
    "country-flag-icons": "^1.5.12",
    "detect-browser": "^5.3.0",
    "framer-motion": "^11.2.5",
    "qrcode": "^1.5.0",
    "react-transition-state": "^1.1.4",
    "react-use-measure": "^2.1.1",
    "resize-observer-polyfill": "^1.5.1",
    "styled-components": "^6.1.11"
  },
  "peerDependencies": {
    "react": "17.x || 18.x",
    "react-dom": "17.x || 18.x",
    "typescript": ">=5.0.4",
    "viem": "2.x"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/qrcode": "^1.4.2",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2"
  },
  "resolutions": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "gitHead": "4bdd10fc8529a31b6323e025a0ffeb3d972edf95"
}
